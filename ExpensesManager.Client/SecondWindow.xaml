<Window x:Class="ExpensesManager.Client.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpensesManager.Client"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя" />
            <TextBox x:Name="BillNameTextBox" />
            <TextBlock Text="Описание" Margin="0,10,0,0"/>
            <TextBox x:Name="BillDescriptionTextBox" />
            <TextBlock Text="Тип" Margin="0,10,0,0"/>
            <ComboBox x:Name="ExpenseTypeComboBox" />
            <TextBlock Text="Сумма" Margin="0,10,0,0"/>
            <TextBox x:Name="BillAmountTextBox" />
            <Button Content="Сохранить" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
