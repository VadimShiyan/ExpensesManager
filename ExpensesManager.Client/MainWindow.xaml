<Window x:Class="ExpensesManager.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpensesManager.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10"/>

        <Button Content="Click" Click="Button_Click" Width="80" Height="30" />

        <Button Content="SecondWindow" Click="OpenSecondWindow_Click" Width="80" Height="30" Margin="360,237,360,167" />

    </Grid>
</Window>
